<div class="span3 col">
	<div class="block">	
		<ul class="nav nav-list">
			<li class="nav-header">Categories</li>
            <% data.categories.take(8).each do |c| %>
                <li class="<%= nav_active(c[:name]) %>"><%= link_to "#{c[:name]}", "/#{c[:freindlyName]}.html" %></li>
            <% end %>
        </ul>
	</div>
    <div class="block">								
		<h4 class="title"><strong>Best</strong> Seller</h4>								
		<ul class="small-product">
			<% data.categories.each do |c| %>
				<% c[:products].select { |p| p.bestSeller == true }.take(5).each do |p|%>
					<li>
						<% link_to "/#{c[:freindlyName]}/#{p[:freindlyName]}.html", :class => "/#{p[:name]}" do %>
							<%= image_tag "http://placehold.it/342x342" %>
						<% end %>
						<%= link_to "#{p[:name]}", "/#{c[:freindlyName]}/#{p[:freindlyName]}.html", :class => "title" %>
					</li>
				<% end %>
			<% end %>
		</ul>
	</div>
</div>						