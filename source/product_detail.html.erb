<% c = locals[:category] %>
<% p = locals[:product] %>

<section class="header_text sub">
	<h4><span>Product Detail</span></h4>
</section>
<section class="main-content">				
	<div class="row">
        <%= partial 'partials/side_menu' %>
        <div class="span9">
			<div class="row">
				<div class="span4">
					<a href="http://placehold.it/342x342" class="thumbnail" data-fancybox-group="group1" title="Description 1"><img alt="" src="http://placehold.it/342x342" /></a>												
					<ul class="thumbnails small">								
						<li class="span1">
							<a href="http://placehold.it/342x342" class="thumbnail" data-fancybox-group="group1" title="Description 1"><img alt="" src="http://placehold.it/342x342" /></a>	
						</li>								
						<li class="span1">
							<a href="http://placehold.it/342x342" class="thumbnail" data-fancybox-group="group1" title="Description 1"><img alt="" src="http://placehold.it/342x342" /></a>	
						</li>													
						<li class="span1">
							<a href="http://placehold.it/342x342" class="thumbnail" data-fancybox-group="group1" title="Description 1"><img alt="" src="http://placehold.it/342x342" /></a>	
						</li>
						<li class="span1">
							<a href="http://placehold.it/342x342" class="thumbnail" data-fancybox-group="group1" title="Description 1"><img alt="" src="http://placehold.it/342x342" /></a>	
						</li>
					</ul>
				</div>
				<div class="span5">
					<address>
						<h4><%= p[:name] %></h4>
						<p><%= p[:description] %></p>
						<p><strong>Featues & Benefits</strong></p>
						<ul>
							<% p[:features].each do |f| %>
								<li><%= f %></li>
							<% end %> 
						</ul>						
					</address>									
				</div>
				<div class="span5">
					<form class="form-inline">		
						<%= link_to "Enquire", "/contact.html?product=#{p[:freindlyName]}", :class => "btn btn-inverse" %>
					</form>
				</div>							
			</div>
			<div class="row">
				<div class="span9">
					<ul class="nav nav-tabs" id="myTab">
						<li class="active"><a href="#home">Specification</a></li>
					</ul>							 
					<div class="tab-content">
						<div class="tab-pane active" id="home">
							<table class="table table-striped shop_attributes">	
								<tbody>
									<% p[:specifications].each do |s| %>
										<tr class="">
											<th><%= s.split(',').first %></th>
											<td><%= s.split(',').last %></td>
										</tr>	
									<% end %>
								</tbody>
							</table>
						</div>
					</div>							
				</div>						
				<%= partial 'partials/related_products', :locals => { :category => c } %>
			</div>
		</div>

	</div>
</section>			

